<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/jiemian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/symbol_ac"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:text="AC"
                android:background="#DCDCDC"
                android:textColor="#4169E1"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/number_7"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:textSize="24sp"
                android:text="7" />

            <Button
                android:id="@+id/number_4"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:background="@android:color/white"
                android:text="4" />

            <Button
                android:id="@+id/number_1"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:background="@android:color/white"
                android:text="1" />

            <Button
                android:id="@+id/symbol_left"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:textSize="24sp"
                android:text="(" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/symbol_div"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:text="/"
                android:background="#DCDCDC"
                android:textColor="#4169E1"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/number_8"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:textSize="24sp"
                android:text="8" />

            <Button
                android:id="@+id/number_5"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:background="@android:color/white"
                android:text="5" />

            <Button
                android:id="@+id/number_2"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:background="@android:color/white"
                android:text="2" />

            <Button
                android:id="@+id/number_0"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:textSize="24sp"
                android:text="0" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/symbol_mult"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:text="*"
                android:textSize="30sp"
                android:background="#DCDCDC"
                android:textColor="#4169E1"/>

            <Button
                android:id="@+id/number_9"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:background="@android:color/white"
                android:text="9" />

            <Button
                android:id="@+id/number_6"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:background="@android:color/white"
                android:text="6" />

            <Button
                android:id="@+id/number_3"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:background="@android:color/white"
                android:text="3" />

            <Button
                android:id="@+id/symbol_right"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:background="@android:color/white"
                android:text=")" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/symbol_del"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:text="âœ˜"
                android:textSize="30sp"
                android:background="#DCDCDC"
                android:textColor="#4169E1"/>

            <Button
                android:id="@+id/symbol_sub"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="24sp"
                android:background="#DCDCDC"
                android:textColor="#4169E1"/>

            <Button
                android:id="@+id/symbol_add"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="24sp"
                android:background="#DCDCDC"
                android:textColor="#4169E1"/>

            <Button
                android:id="@+id/symbol_dian"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:text="."
                android:layout_weight="1"
                android:textSize="24sp"
                android:background="#DCDCDC"
                android:textColor="#4169E1"
                />

            <Button
                android:id="@+id/symbol_equal"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="2"
                android:background="#4169E1"
                android:textSize="24sp"
                android:text="="
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/jiemian"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:maxLines="1"/>

</RelativeLayout>